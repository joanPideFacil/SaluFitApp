@model IEnumerable<SaluFitApp.Web.Domain.Entities.Patient>

@{
    ViewData["Title"] = "Pacientes";
    // var searchTerm = HttpContext.Request.Query["search"].ToString();
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Pacientes</h1>
        <a asp-action="Create" class="btn btn-primary">Nuevo paciente</a>
    </div>

    @* <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group">
            <input type="text"
                   name="search"
                   value="@searchTerm"
                   class="form-control"
                   placeholder="Buscar pacientes..." />
            <button class="btn btn-outline-secondary">Buscar</button>
        </div>
    </form> *@

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Nombre completo</th>
                <th>Fecha de nacimiento</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Dirección</th>
                <th style="width: 150px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        No se han encontrado pacientes.
                    </td>
                </tr>
            }
            else
            {
                foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Nombre</td>
                        <td>@p.DateOfBirth.ToString("yyyy-MM-dd")</td>
                        <td>@p.Phone</td>
                        <td>@p.Email</td>
                        <td>@p.Address</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
