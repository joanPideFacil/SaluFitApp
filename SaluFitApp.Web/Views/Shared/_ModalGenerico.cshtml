@model SaluFitApp.Web.Models.ModalGenericoModel

<div class="modal fade" id="@Model.IdModal" tabindex="-1" aria-labelledby="@Model.IdModal + 'Label'" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 px-4 pt-4">
            <form asp-action="@Model.Accion" method="post">
                @* Campos adicionales *@
                @foreach (var hidden in Model.HiddenFields)
                {
                    <input type="hidden" name="@hidden.Key" value="@hidden.Value" />
                }

                <h5 class="mb-3">@Model.Titulo</h5>

                @if (Model.Buscador)
                {
                    <div class="mb-4">
                        <div class="input-group rounded-5 form-control bg-gris d-flex flex-wrap">
