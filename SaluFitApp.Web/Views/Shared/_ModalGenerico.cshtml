                                </svg>
                            </span>
                            <input type="text" name="search" class="input-buscar" placeholder="Buscar clase" />
                        </div>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.InputLabel))
                {
                    <div class="mb-3 d-flex align-items-center justify-content-between p-2 @Model.Bordes">
                        <label class="form-label me-2 mb-0" style="width: 70%;">@Model.InputLabel</label>
                        <input type="text"
                               class="d-flex justify-content-end"
                               id="fecha-cita"
                               name="@Model.InputName"
                               placeholder="     Seleccionar fecha ▼"
                               style="border: none;"
                               required />
                    </div>

                }

                @if (Model.TextArea)
                {
                    <div class="my-3">
                        <textarea name="@Model.TextAreaName" class="form-control border-0 border-bottom @Model.Bordes2" placeholder="@Model.TextAreaPlaceholder" id="notaContenido"
                                  style="height: 160px; resize: none; box-shadow: none; border-radius: unset;" required></textarea>
                    </div>
                }

                <div class="modal-footer border-0 d-flex justify-content-end">
                    <button type="button" class="btn btn-light px-5 rounded-5" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn text-white px-5 rounded-5" style="background-color: #3E5F66;">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>
<script>
    flatpickr("#fecha-cita", {
        dateFormat: "d/m/Y",
        locale: "es"
    });
</script>

