@using System.Globalization

@model PacienteModel

@{
    ViewData["Title"] = "Detalles del paciente";
    var section = (Context.Request.Query["section"].FirstOrDefault() ?? "General");
    string Active(string name) => string.Equals(section, name, StringComparison.OrdinalIgnoreCase) ? "active" : "";
}

<div class="container ms-5 py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <p style="color: #9A9A9A; font-weight:400; font-size:medium">Pacientes / Detalles del paciente</p>
            <h1 style="font-weight:400; margin-bottom: 0;">@ViewData["Title"]</h1>
            <p style="color: #3B3B3B; font-weight:400; font-size:small">Información completa y gestión del paciente</p>
        </div>
        <div>
            <button type="submit" class="btn btn-Anadir rounded-5 px-3">Guardar cambios</button>
            <button type="submit" class="btn btn-Anadir rounded-5 ms-2 px-3">Eliminar paciente</button>
            <a asp-action="Index" class="btn btn-Anadir rounded-5 ms-2 px-4">Volver atrás</a>
        </div>

    </div>

    <div class="d-flex justify-content-start align-items-center mb-3">
        <div>
            <img width="52" height="52" class="rounded-5 me-4" src="~/img/imagen-ejemplo.jpg" />
        </div>
        <div class="d-flex flex-column">
            <p style="font-weight:400; font-size:24px; margin-bottom: 0;">@Model.Nombre</p>
            <p style="color: #3B3B3B; font-weight:400; margin-bottom: 0; font-size: 12px;">
                Fecha de nacimiento: @Model.FechaNacimiento.ToString("dd 'de' MMMM 'de' yyyy", CultureInfo.GetCultureInfo("es-ES"))
            </p>
        </div>

        
    </div>   

    <ul class="nav nav-tabs custom-tabs mb-0" role="tablist" style="border-bottom:1px solid #000;">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="general" data-bs-toggle="tab" href="#simple-tabpanel-0" role="tab" aria-controls="simple-tabpanel-0" aria-selected="true" style="font-weight:400; color: black;">General</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="citas" data-bs-toggle="tab" href="#simple-tabpanel-1" role="tab" aria-controls="simple-tabpanel-1" aria-selected="false" style="font-weight:400; color: black;">Citas</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="Ejercicios" data-bs-toggle="tab" href="#simple-tabpanel-2" role="tab" aria-controls="simple-tabpanel-2" aria-selected="false" style="font-weight:400; color: black;">Ejercicios</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="Documentos" data-bs-toggle="tab" href="#simple-tabpanel-3" role="tab" aria-controls="simple-tabpanel-3" aria-selected="false" style="font-weight:400; color: black;">Documentos</a>
        </li>

    </ul>

    <div class="tab-content pt-5" id="tab-content">
        <div class="tab-pane active" id="simple-tabpanel-0" role="tabpanel" aria-labelledby="general">
            <form asp-action="Edit" method="post">
                @* incluir el Id oculto para que MVC lo reciba *@
                <input type="hidden" asp-for="Id" />
                @await Html.PartialAsync("_PatientCard", Model)
            </form>
        </div>
        <div class="tab-pane" id="simple-tabpanel-1" role="tabpanel" aria-labelledby="citas">
            <div class="mt-3 p-4" style="background: #F7F5F4; border-radius:16px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 style="font-weight:500;">Citas</h5>
                    <a asp-action="NewCita" asp-route-patientId="@Model.Id" class="btn btn-sm btn-Anadir rounded-5">Nueva cita</a>
                </div>
                <table class="table border-top-0 mb-0">
                    <thead>
                        <tr>
                            <th>Nombre cita</th>
                            <th>Descripción</th>
                            <th>Fecha</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cita in Model.Citas)
                        {
                            <tr class="border-bottom">
                                <td>@cita.Nombre</td>
                                <td>@cita.Descripcion</td>
                                <td class="text-muted">@cita.FechaCita.ToString("dd 'de' MMMM 'de' yyyy", CultureInfo.GetCultureInfo("es-ES"))</td>
                                <td class="text-end">
                                    <a asp-action="DeleteCita" asp-route-id="@cita.Id" class="text-decoration-none text-muted">Eliminar</a>
                                </td>
                            </tr>
                        }
                        @if (Model.Citas == null || !Model.Citas.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-muted">Sin citas aún.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="tab-pane" id="simple-tabpanel-2" role="tabpanel" aria-labelledby="Ejercicios">
            <div class="mt-3 p-4" style="background: #F7F5F4; border-radius:16px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 style="font-weight:500;">Ejercicios</h5>
                    <a asp-action="AssignEjercicio" asp-route-patientId="@Model.Id" class="btn btn-sm btn-Anadir rounded-5">Asignar ejercicio</a>
                </div>
                <table class="table border-top-0 mb-0">
                    <thead>
                        <tr>
                            <th>Orden</th>
                            <th>Ejercicio</th>
                            <th>Repeticiones</th>
                            <th>L M X J V S D</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < (Model.Ejercicios?.Count ?? 0); i++)
                        {
                            var ej = Model.Ejercicios[i];
                            <tr class="border-bottom">
                                <td>@(i + 1)</td>
                                <td>@ej.Nombre</td>
                                <td>@ej.Repeticiones</td>
                                <td>
                                    <div class="d-flex gap-1">
                                        @* suposición de días como checkboxes *@
                                        @foreach (var dia in new[] { "L", "M", "X", "J", "V", "S", "D" })
                                        {
                                            <div class="form-check" style="font-size:0;">
                                                <input class="form-check-input" type="checkbox" disabled />
                                            </div>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (Model.Ejercicios == null || !Model.Ejercicios.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-muted">Sin ejercicios asignados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane" id="simple-tabpanel-3" role="tabpanel" aria-labelledby="Documentos">
            <div class="mt-3 p-4" style="background: #F7F5F4; border-radius:16px;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 style="font-weight:500;">Documentos</h5>
                    <a asp-action="NewDocumento" asp-route-patientId="@Model.Id" class="btn btn-sm btn-Anadir rounded-5">Nuevo documento</a>
                </div>
                <table class="table border-top-0 mb-0">
                    <thead>
                        <tr>
                            <th>Documento</th>
                            <th>Fecha Fin</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.Documentos)
                        {
                            <tr class="border-bottom">
                                <td>@doc.Nombre</td>
                                <td class="text-muted">@doc.FechaFin.ToString("dd 'de' MMMM", CultureInfo.GetCultureInfo("es-ES"))</td>
                                <td class="text-end">
                                    <a asp-action="DeleteDocumento" asp-route-id="@doc.Id" class="text-decoration-none text-muted">Eliminar</a>
                                </td>
                            </tr>
                        }
                        @if (Model.Documentos == null || !Model.Documentos.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-muted">Sin documentos.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>    

   
   </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}