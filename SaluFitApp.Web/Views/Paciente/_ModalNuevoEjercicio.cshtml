@model EjercicioModel

<div class="modal fade" id="nuevoEjercicioModal" tabindex="-1" aria-labelledby="nuevoEjercicioModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 px-2">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="nuevoEjercicioModalLabel">Nuevo ejercicio</h5>
            </div>

            <div class="modal-body pt-2">
                <form asp-action="AddEjercicio" method="post">
                    <input type="hidden" name="PacienteId" value="@ViewBag.PacienteId" />

                    <div class="d-flex justify-content-between align-items-center p-2 border-bottom border-top">
                        <label class="mb-0" style="font-size: 14px;">Seleccionar ejercicio*</label>
                        <select name="Nombre" class="form-select border-0 text-end" style="width: 60%;">
                            <option disabled selected>Seleccionar</option>
                            <option value="Ejercicio 1">Ejercicio 1</option>
                            <option value="Ejercicio 2">Ejercicio 2</option>
                            <option value="Ejercicio 3">Ejercicio 3</option>
                        </select>
                    </div>

                    <div class="d-flex justify-content-between align-items-center p-2 border-bottom">
                        <label class="mb-0" style="font-size: 14px;">Repeticiones/tiempo*</label>
                        <span class="text-muted" style="font-size: 13px;">2 series de 1 minuto</span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center p-2 border-bottom">
                        <label class="mb-0" style="font-size: 14px;">Fecha inicio*</label>
                        <input name="FechaInicio" type="date" class="form-control border-0 text-end" style="width: 60%;">
                    </div>

                    <div class="d-flex justify-content-between align-items-center p-2 border-bottom">
                        <label class="mb-0" style="font-size: 14px;">Fecha fin*</label>
                        <input name="FechaFin" type="date" class="form-control border-0 text-end" style="width: 60%;">
                    </div>

                    <div class="modal-footer border-0 d-flex justify-content-end">
                        <button type="button" class="btn btn-light px-5 rounded-5" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn text-white px-5 rounded-5" style="background-color: #3E5F66;">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
